<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>DISPLAY CRUD</title>
  </head>
  <body>
    <div class="container mt-3">
      <h2>Information user from DB</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Id</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Address</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < dataTable.length; i++) { %>
          <tr>
            <td><%= dataTable[i].id %></td>
            <td><%= dataTable[i].firstName %></td>
            <td><%= dataTable[i].lastName %></td>
            <td><%= dataTable[i].email %></td>
            <td><%= dataTable[i].address %></td>
            <td>
              <a
                type="button"
                href="/edit-crud?id=<%= dataTable[i].id %>"
                class="btn btn-primary"
                >Edit</a
              >
              <button type="button" class="btn btn-secondary">Delete</button>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
